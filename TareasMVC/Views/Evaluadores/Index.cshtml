@using TareasMVC.Entidades
@model EvaluadoresViewModel;

@{
    ViewData["Title"] = "Evaluadores";
    Layout = "../shared/_Layout.cshtml";
}

<h1 class="mb-2">Evaluadores</h1>

<div class="mb-3">
    <a asp-action="Crear" class="btn btn-primary">Agregar evaluador</a>
</div>

@if(Model.Evaluadores.Count == 0)
{
    <div class="container">
        <div class="row">
            <div class="col text-black">No se encontraron Evaluadores</div>
        </div>
    </div>
}
else
{
    
    <table class="table table-striped">
    <thead>
        <tr>
            <th>Nombre</th>
            <th>Apellidos</th>
            <th>Acciones</th>
            <th></th>
        </tr>
    </thead>
        <tbody id="contenedor-botones">
        @foreach (var evaluador in Model.Evaluadores)
        {
                <tr id="fila-@evaluador.Id">
                <td>@evaluador.NombreEvaluador</td>
                <td>@evaluador.ApellidosEvaluador</td>
                <td>
                    <a asp-action="Editar" asp-route-id="@evaluador.Id" class="btn btn-sm btn-secondary">Editar</a>
                   @*  <a asp-action="Eliminar" asp-route-id="@evaluador.Id" class="btn btn-sm btn-danger">Eliminar</a> *@
                        <button type="button" class="btn btn-sm btn-danger"
                                data-id="@evaluador.Id"
                                data-nombre="@evaluador.NombreEvaluador">
                            Eliminar
                        </button>
                </td>
            </tr>
        }
    </tbody>
</table>
    
}
@section Scripts {
    <script src="~/js/utilidades.js"></script>

    <script>
        const URL = "Evaluadores";
        ejecutarAlertEliminar(URL)
    </script>
    <script src="~/js/site.js"></script>
}
