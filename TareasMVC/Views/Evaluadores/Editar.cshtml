@model EvaluadorViewModel;
@{
    ViewData["Title"] = "Editar Evaluador";
}

<h1 class="mb-2">Editar evaluador</h1>


<div class="card mt-5">
    <div class="card-body">
        <form asp-action="Editar" method="post">
            <span asp-validation-summary="ModelOnly" class="text-danger"></span>

            <div class="mb-3">
                <label asp-for="NombreEvaluador" class="form-label"></label>
                <input asp-for="NombreEvaluador" class="form-control" value="@Model.NombreEvaluador"/>
                <span asp-validation-for="NombreEvaluador" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="ApellidosEvaluador" class="form-label"></label>
                <input asp-for="ApellidosEvaluador" class="form-control" value="@Model.ApellidosEvaluador" />
                <span asp-validation-for="ApellidosEvaluador" class="text-danger"></span>
            </div>

            <button class="btn-primary btn">Editar Evaluador</button>
        </form>
    </div>
</div>