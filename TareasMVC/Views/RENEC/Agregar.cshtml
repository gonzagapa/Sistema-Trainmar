@using TareasMVC.Models.Renec
@model RENECViewModel;
@{
    ViewData["Title"] = "Agregar registro";
}
<h1 class="mb-4">Agregar registro</h1>

<form asp-action="Agregar" class="card">
    <span asp-validation-summary="ModelOnly" class="text-danger"></span>
    <div class="card-body">
        <div class="mb-4">
            <label asp-for="Codigo" class="form-label fw-bold">Codigo</label>
            <input asp-for="Codigo" type="text" class="form-control"/>
            <span asp-validation-for="Codigo" class="text-danger"></span>
        </div>
        <div class="mb-4">
            <label asp-for="Nivel" class="form-label fw-bold">Nivel</label>
            <input asp-for="Nivel" type="text" class="form-control" />
            <span asp-validation-for="Nivel" class="text-danger"></span>
        </div>
        <div class="mb-4">
            <label asp-for="Titulo" class="form-label fw-bold">Titulo</label>
            <input asp-for="Titulo" type="text" class="form-control" />
            <span asp-validation-for="Titulo" class="text-danger"></span>
        </div>
        <div class="mb-4">
            <label asp-for="Comite" class="form-label fw-bold">Comite</label>
            <input asp-for="Comite" type="text" class="form-control" />
            <span asp-validation-for="Comite" class="text-danger"></span>
        </div>
        <div class="mb-4">
            <label asp-for="Sector_Productivo" class="form-label fw-bold">Sector productivo</label>
            <input asp-for="Sector_Productivo" type="text" class="form-control" />
            <span asp-validation-for="Sector_Productivo" class="text-danger"></span>
        </div>
        <div class="mb-4">
            <label asp-for="sector" class="form-label fw-bold">Sector</label>
            <input asp-for="sector" type="text" class="form-control" />
            <span asp-validation-for="sector" class="text-danger"></span>
        </div>
        <div class="mb-4">
            <label asp-for="acceso" class="form-label fw-bold">Acceso</label>
            <input asp-for="acceso" type="text" class="form-control"/>
            <span asp-validation-for="acceso" class="text-danger"></span>
        </div>
        <div style="display:flex; align-items:center; justify-content:center;" class="mb-4">
        </div>
        <button class="btn btn-primary"> Guardar cambios</button>
    </div>
</form>