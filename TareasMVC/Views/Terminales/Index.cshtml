@using TareasMVC.Entidades
@model TerminalesViewModel;

@{
    ViewData["Title"] = "Terminales";
    Layout = "../shared/_Layout.cshtml";
}

<h1 class="mb-2">Terminales</h1>

<div class="mb-3">
    <a asp-action="Crear" class="btn btn-primary">Agregar Terminales</a>
</div>

@if (Model.Terminales.Count == 0)
{
    <div class="container">
        <div class="row">
            <div class="col text-black">No se encontraron Evaluadores</div>
        </div>
    </div>
}
else
{

    <table class="table table-striped">
        <thead>
            <tr>
                <th>Terminal</th>
                <th>Nombre de la terminal</th>
                <th>Acciones</th>
                <th></th>
            </tr>
        </thead>
        <tbody id="contenedor-botones">
            @foreach (var terminal in Model.Terminales)
            {
                <tr id="fila-@terminal.Id">
                    <td>@terminal.AbreviaturaTerminal</td>
                    <td>@terminal.NombreTerminal</td>
                    <td>
                        <a asp-action="Editar" asp-route-id="@terminal.Id" class="btn btn-sm btn-secondary">Editar</a>
                        <button type="button" class="btn btn-sm btn-danger"
                                data-id="@terminal.Id"
                                data-nombre="@terminal.AbreviaturaTerminal">
                            Eliminar
                        </button>
                    </td>
                </tr>
            }
        </tbody>
    </table>

}
@section Scripts{
    <script src="~/js/utilidades.js"></script>

    <script>
        const URL = "Terminales";
        ejecutarAlertEliminar(URL)
    </script>
    <script src="~/js/site.js"></script>
}
